    <div class="title-title">
      <span class="main-color-br">- 註冊 -</span>
    </div>
    <div class="login-main">
      <!-- <img src="images/layout/logo.png"> -->
      <form action="/register" method="post">
        <div>
            <span><img src="/images/layout/ACCOUNT.png" alt="ACCOUNT.png"> 姓名</span>
            <input class="btn-block" autofocus="autofocus" name="name" placeholder="姓名"  type="name">
        </div>
        <div>
          <span><img src="/images/layout/ACCOUNT.png" alt="ACCOUNT.png"> 帳號：</span>
          <!-- <input class="btn-block" autofocus="autofocus" name="email" placeholder="電子信箱" readonly="readonly" value="<%=emailV.email %>" type="email"> -->
