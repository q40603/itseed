<!--HEADER-->
<% include ../header %>
<!--END HEADER-->
<section class="section-memberList">
  <% include ./sub-nav %>
  <div class="main-title-div">
    <div class="sub-title clearfix">
      <div></div>
      <div></div>
      <div></div>
      <div>歷屆名單</div>
    </div>
  </div>

  <div class="text-xs-center drop-but">
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        屆數
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1" style="height: 100px;overflow: scroll;">
        <li class="list-num" data-key="1">1</li>
        <li class="list-num" >2</li>
        <li class="list-num" >3</li>
        <li class="list-num" >4</li>
        <li class="list-num" >5</li>
        <li class="list-num" >6</li>
        <li class="list-num" >7</li>
        <li class="list-num" >8</li>
        <li class="list-num" >9</li>
        <li class="list-num" >10</li>
        <li class="list-num" >11</li>
        <li class="list-num" >12</li>
        <li class="list-num" >13</li>
        <li class="list-num" >14</li>
        <li class="list-num" >15</li>
      </ul>
    </div>
  </div>
  <div class="member-table">
    <span class="list-th">-第 <span>15</span> 屆-</span>
    <div class="member-head">
      <span>姓名</span>
      <span>學校</span>
      <span>學系</span>
    </div> 
    <table id="member-content">
      <% for(var i = 0; i < datas.length; i++){ %>
        <% if(datas[i].class == 15){%>
          <tr><td><%- datas[i].name %></td><td><%-datas[i].school %></td><td><%-datas[i].dep %></td></tr>
        <% } %>  
      <% } %>   
    </table>
  </div>
</section>
<!--script src="/js/specifies/frontend/memberList.js"></script-->
<script type="text/javascript">
var datas = <%-JSON.stringify(datas)%>
$(".list-num").click(function(){
  $(".list-th>span").html($(this).html());
  $("#member-content").html("");
  for(var i=0;i<datas.length;i++){
   if(datas[i].class == $(this).html()){
      $("#member-content").append("<tr><td>"+datas[i].name+"</td><td>"+datas[i].school+"</td><td>"+datas[i].dep+"</td></tr>");
    }
  }
});
</script> 
